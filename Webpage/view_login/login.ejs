<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BeeSSH - Login</title>
    <script src="https://js.hcaptcha.com/1/api.js" async defer></script>
    <%- include('./includes/trailwind.ejs'); %>
    <%- include('./includes/background.ejs'); %>
</head>
<body class="register-page">
<%- include ("./includes/header"); %>
  <div class="wrapper">
    <div class="page-header">
      <div class="page-header-image"></div>
      <div class="content">
        <div class="container">
          <div class="row">
            <div class="col-lg-5 col-md-6 offset-lg-0 offset-md-3">
              <div id="square7" class="square square-7"></div>
              <div id="square8" class="square square-8"></div>
              <div class="card card-register">
                <div class="card-header">
                  <img class="card-img" src="/img/square1.png" alt="Card image" >
                  <h4 class="card-title">Login</h4>
                </div>
                <div class="card-body">
                  <!-- Begin Form -->
                  <%- include("./includes/messages") %>
                  <form class="form" action="/users/login" method="POST">
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <i class="tim-icons icon-email-85"></i>
                        </div>
                      </div>
                      <input placeholder="Email" class="form-control" name="email" type="email" autocomplete="email" required>
                    </div>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <i class="tim-icons icon-lock-circle"></i>
                        </div>
                      </div>
                      <input class="form-control" placeholder="Password" name="password" type="password" autocomplete="current-password" required>
                    </div>
                    <div class="input-group d-none" id="mfa_input">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <i class="tim-icons icon-bag-16"></i>
                        </div>
                      </div>
                      <input class="form-control" placeholder="2FA Token" name="mfakey" type="number"
                             maxlength="6"
                             oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
                    </div>
                    <div  class="input-group-lg">
                      <div class="form-check text-left">
                        <label class="form-check-label">
                          <input id="2FA" class="form-check-input" type="checkbox">
                          <span class="form-check-sign"> 2FA </span>
                        </label>
                      </div>
                      <div class="text-right inline-item">
                        <label class="form-check-label">
                          <a  href="/users/resetpassword">Forgot Password?</a>
                        </label>
                      </div>
                    </div>
                    <div class="form-check  text-monospace">
                      <div class="h-captcha" data-sitekey="3ea12c5e-7584-4372-86fd-819b4239d6f0" data-theme="dark"></div>
                    </div>
                    <div class="card-footer">
                      <button type="submit" class="btn btn-info btn-round btn-lg">Login</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="register-bg"></div>
          <div id="square1" class="square square-1"></div>
          <div id="square2" class="square square-2"></div>
          <div id="square3" class="square square-3"></div>
          <div id="square4" class="square square-4"></div>
          <div id="square5" class="square square-5"></div>
          <div id="square6" class="square square-6"></div>
        </div>
      </div>
    </div>
  </div>
  <!--Script for Hide/Show 2FA-->
<script>
  const faon = document.getElementById("2FA");
  const mfainput = document.getElementById("mfa_input");
  faon.addEventListener('change', (event) => {
    if (event.currentTarget.checked) {
      mfainput.classList.remove("d-none");
    } else {
      mfainput.classList.add("d-none");
    }
  })
</script>
<!--   Core JS Files   -->
<script src="/js/core/jquery.min.js" type="text/javascript"></script>
<script src="/js/core/popper.min.js" type="text/javascript"></script>
<script src="/js/core/bootstrap.min.js" type="text/javascript"></script>
<script src="/js/plugins/perfect-scrollbar.jquery.min.js"></script>
<!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
<script src="/js/plugins/bootstrap-switch.js"></script>
<!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
<script src="/js/plugins/nouislider.min.js" type="text/javascript"></script>
<!-- Chart JS -->
<script src="/js/plugins/chartjs.min.js"></script>
<!--  Plugin for the DatePicker, full documentation here: https://github.com/uxsolutions/bootstrap-datepicker -->
<script src="/js/plugins/moment.min.js"></script>
<script src="/js/plugins/bootstrap-datetimepicker.js" type="text/javascript"></script>
<!-- Control Center for Black UI Kit: parallax effects, scripts for the example pages etc -->
<script src="/js/blk-design-system.min.js?v=1.0.0" type="text/javascript"></script>
  </body>
</html>
