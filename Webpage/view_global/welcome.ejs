<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BeeSSH</title>
    <%- include('./includes/trailwind.ejs'); %>
    <%- include('./includes/background.ejs'); %>
</head>
<body class="leading-normal tracking-normal text-indigo-400 m-6 bg-cover bg-fixed">
<div class="h-full">
    <!--Nav-->
    <%- include('./includes/header.ejs'); %>
    <!--Main-->
    <div class="container pt-24 md:pt-36 mx-auto flex flex-wrap flex-col md:flex-row items-center">
        <!--Left Col-->
        <div class="flex flex-col w-full xl:w-2/5 justify-center lg:items-start overflow-y-hidden">
            <h1 class="my-4 text-3xl md:text-5xl text-white opacity-75 font-bold leading-tight text-center md:text-left">
                Welcome to
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-pink-500 to-yellow-500">
              BEE - SSH!
            </span>
            </h1>
            <p class="leading-normal text-base md:text-2xl mb-8 text-center md:text-left">
                A small, open-source SSH Client with a modern look.
            </p>
        </div>

        <!--Right Col-->
        <div class="w-full xl:w-3/5 p-12 overflow-hidden">
            <img class="mx-auto w-full md:w-4/5 transform -rotate-3 transition hover:scale-30 duration-700 ease-in-out hover:rotate-3" src="./img/tool.svg" />
        </div>

        <div class="mx-auto md:pt-16">
            <p class="text-blue-400 font-bold pb-8 lg:pb-6 text-center">
                Download BEESSH:
            </p>
            <div class="flex w-full justify-center md:justify-start pb-24 lg:pb-0 fade-in">
                <a href="https://github.com/sysfaker/Bee-SSH">
                    <img src="./img/github.svg" class="h-10 pr-12 transform hover:scale-125 duration-300 ease-in-out"/>
                </a>
                <a href="">
                    <img src="./img/download.svg" class="h-10 transform hover:scale-125 duration-300 ease-in-out"/>
                </a>
            </div>
        </div>

    </div>
</div>
</body>
</html>